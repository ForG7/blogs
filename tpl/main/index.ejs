<% include head.ejs %>
<main class="clear">

    <div class="mainLeft">
        <div id="mainLeft">
            <% for(var i = info2.length - 1; i >= 0; i--){ %>
                <div class="listBox">
                    <h1><%= info2[i].title %></h1>
                    <p class="colDefault">
                        作者：<span class="colInfo">admin</span> -
                        时间：<span class="colInfo"><%= pub %></span> -
                        阅读：<span class="colInfo"><%= info2[i].views %></span> -
                        评论：<span class="colInfo"><%= info2[i].comments.length %></span>
                    </p>
                    <dfn><p><%= info2[i].int %></p></dfn>
                    <div class="function"><a href="view?id=<%= info2[i]._id %>" target="_blank">阅读全文</a></div>
                </div>
            <% } %>
        </div>
        <img src="/public/images/loading.gif" alt="loading" id="loading" style="display: none;">
        <div class="pager" >
            <ul class="clear" id="pager">
                <% if(page === 1){ %>
                <li class="previous"><a href="javascript:;" >没有上一页了</a></li>
                <% } else { %>
                <li class="previous" id="prev"><a href="/index?page=<%= page-1 %>">上一页</a></li>
                <% } %>
                <li id="global"><strong><%= page %> / <%= pages %></strong></li>
                <% if(page === pages){ %>
                <li class="next"><a href="javascript:;">已经是最后一页</a></li>
                <% } else{ %>
                <li class="next" id="next"><a href="/index?page=<%= page+1 %>">下一页</a></li>
                <% } %>
            </ul>
        </div>
    </div>
    <% include right.ejs %>
</main>
<% include foot.ejs %>